<p id="notice"><%= notice %></p>

<div class="col-lg-12 text-center">
  <h3>
    <%= @course_session.course.name %> - <%= @course_session.title %>
  </h3>
</div>
<div class="col-sm-8">
  <div class="panel panel-primary">
      <div class="panel-body">
        <%= @course_session.slides.all.each do |slide| %>
          <%= image_tag slide.image.url(:large) %>
        <% end %>
      </div>
    </div>
    <% unless current_user.student? %>
      <%= simple_form_for [@course_session, Slide.new]  do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :image, as: :file, label: false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    <% end %>
</div>
<div class="col-sm-4">
    <div class="panel panel-primary">
        <div class="panel-body">
            <ul class="chat">
              <div id="messages">
                <%= render partial: @course_session.messages %>
              </div>
            </ul>
        </div>
        <%= render 'messages/new', course_session: @course_session %>
    </div>
</div>
<script>
  var div = $('.panel-body');
  div.scrollTop( div.get(0).scrollHeight );
</script>
